{
  "name": "ello-webapp",
  "version": "3.0.21",
  "private": true,
  "scripts": {
    "clean": "rm -f .yarnclean public/static/*.css public/static/*.html public/static/*.js public/static/*.map",
    "build": "yarn run clean && node ./node_modules/webpack/bin/webpack.js -p --progress --config=webpack.prod.config.js --env.commitsha=`git rev-parse HEAD`",
    "dev": "DEBUG=express:* NODE_ENV=development babel-node src/server/dev.js",
    "flow": "flow",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:css": "stylelint 'src/**/*.css'",
    "lint:js": "eslint src test",
    "lint:js:fix": "eslint src test --fix",
    "pretest": "yarn lint",
    "test": "yarn test:all",
    "test:all": "NODE_ENV=test mocha test/unit --recursive",
    "test:all:watch": "NODE_ENV=test mocha test/unit --recursive --watch",
    "test:watch": "NODE_ENV=test mocha test/unit --recursive --watch"
  },
  "engines": {
    "node": "7.5.0",
    "npm": "4.1.2"
  },
  "browserlist": "> 5%, last 2 firefox versions, last 2 chrome versions, last 2 safari versions, last 2 edge versions, ie 11, not OperaMini all",
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [
      "lodash",
      "transform-flow-strip-types"
    ],
    "env": {
      "development": {
        "plugins": [
          [
            "react-transform",
            {
              "transforms": [
                {
                  "transform": "react-transform-hmr",
                  "imports": [
                    "react"
                  ],
                  "locals": [
                    "module"
                  ]
                },
                {
                  "transform": "react-transform-catch-errors",
                  "imports": [
                    "react",
                    "redbox-react"
                  ]
                }
              ]
            }
          ]
        ]
      },
      "production": {
        "plugins": [
          "transform-react-constant-elements",
          "transform-react-remove-prop-types"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "ello",
    "globals": {
      "AndroidInterface": false
    }
  },
  "stylelint": {
    "extends": "stylelint-config-primer",
    "rules": {
      "comment-empty-line-before": null,
      "selector-class-pattern": null,
      "selector-no-type": null,
      "no-unsupported-browser-features": [
        true,
        {
          "browsers": "> 5%, last 2 firefox versions, last 2 chrome versions, last 2 safari versions, last 2 edge versions, ie 11, not OperaMini all",
          "ignore": [
            "calc",
            "flexbox",
            "viewport-units",
            "will-change"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "babel-polyfill": "6.23.0",
    "classnames": "2.2.5",
    "ello-brains": "1.0.5",
    "exif-js": "2.2.1",
    "glamor": "3.0.0-1",
    "honeybadger-js": "0.4.8",
    "html-webpack-plugin": "2.28.0",
    "humps": "2.0.1",
    "immutable": "3.8.1",
    "jwt-decode": "2.2.0",
    "lodash": "4.17.4",
    "mousetrap": "1.6.1",
    "postcss": "6.0.3",
    "postcss-apply": "0.8.0",
    "postcss-calc": "6.0.0",
    "postcss-color-function": "4.0.0",
    "postcss-custom-media": "6.0.0",
    "postcss-custom-properties": "6.0.1",
    "postcss-import": "10.0.0",
    "postcss-loader": "2.0.6",
    "postcss-pxtorem": "4.0.1",
    "postcss-reporter": "4.0.0",
    "postcss-url": "7.0.0",
    "prop-types": "15.5.10",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-fastclick": "3.0.2",
    "react-helmet": "5.1.3",
    "react-redux": "5.0.5",
    "react-router": "3.0.2",
    "react-router-redux": "4.0.8",
    "react-router-scroll": "0.4.2",
    "react-slick": "0.14.11",
    "react-slide": "0.3.0",
    "redux": "3.7.0",
    "redux-logger": "3.0.6",
    "redux-persist": "4.8.1",
    "redux-persist-immutable": "4.3.0",
    "redux-persist-transform-immutable": "4.3.0",
    "redux-saga": "0.15.4",
    "reselect": "3.0.1",
    "simple-oauth2": "1.2.0",
    "transit-immutable-js": "0.7.0",
    "trunc-html": "1.1.2",
    "tween.js": "16.6.0",
    "url-regex": "4.1.1"
  },
  "devDependencies": {
    "autoprefixer": "7.1.1",
    "babel-cli": "6.24.1",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-loader": "7.1.0",
    "babel-plugin-lodash": "3.2.11",
    "babel-plugin-react-transform": "2.0.2",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-plugin-transform-react-constant-elements": "6.23.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.6",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.24.1",
    "chai": "4.0.2",
    "chai-generator": "2.1.0",
    "chai-immutable": "1.6.0",
    "css-loader": "0.28.4",
    "dotenv": "4.0.0",
    "eslint": "4.0.0",
    "eslint-config-ello": "1.0.3",
    "express": "4.15.3",
    "extract-text-webpack-plugin": "2.1.2",
    "flow-bin": "0.48.0",
    "html-loader": "0.4.5",
    "http-proxy": "1.16.2",
    "isomorphic-fetch": "2.2.1",
    "jsdom": "11.0.0",
    "mocha": "3.4.2",
    "react-addons-perf": "15.4.2",
    "react-addons-test-utils": "15.6.0",
    "react-transform-catch-errors": "1.0.2",
    "react-transform-hmr": "1.0.4",
    "redbox-react": "1.4.2",
    "sinon": "2.3.5",
    "sinon-chai": "2.11.0",
    "source-map-support": "0.4.15",
    "style-loader": "0.18.2",
    "stylelint": "7.11.1",
    "stylelint-config-primer": "1.4.0",
    "webpack": "3.0.0",
    "webpack-dev-middleware": "1.11.0",
    "webpack-hot-middleware": "2.18.0",
    "webpack-s3-plugin": "1.0.0-rc.0",
    "why-did-you-update": "0.0.8"
  }
}
