{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "ENV": false
  },
  "rules": {
    "semi": 0,
    "react/no-multi-comp": 0,
    "no-console": 2,
    "no-debugger": 2,
    "no-alert": 2,
    "id-length": [2, { "properties": "never", "exceptions": ["c", "e", "h", "i", "r", "v", "w", "x", "y"] }],
    "no-unused-expressions": [2, { "allowTernary": true }],
    "no-extend-native": [2, {"exceptions": ["Date"]}]
  }
}
